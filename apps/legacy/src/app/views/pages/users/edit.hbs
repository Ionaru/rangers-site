<div class="container pt-3">
    <h1>Edit user: {{user_.name}}</h1>

    <form method="post">
        <div class="form-group">
            <label for="rank-input">Rank</label>
            <select class="form-control" id="rank-input" name="rank">
                <option value="">None</option>
                {{#each ranks}}
                    <option {{#ifCond ../user_.rank.id '===' this.id}}selected{{/ifCond}} value="{{this.id}}">
                        {{this.name}}
                    </option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="ts3User-input"><i class="fab fa-teamspeak"></i> Teamspeak user</label>
            <select class="form-control" id="ts3User-input" name="ts3User">
                <option value="">None</option>
                {{#each ts3Users}}
                    <option {{#ifCond ../user_.ts3User.id '===' this.id}}selected{{/ifCond}} value="{{this.id}}">
                        {{this.nickname}}
                    </option>
                {{/each}}
            </select>
        </div>
        <a class="btn btn-secondary mb-2" href="/users">Cancel</a>
        <button type="submit" class="btn btn-warning mb-2">Edit</button>
    </form>
</div>
